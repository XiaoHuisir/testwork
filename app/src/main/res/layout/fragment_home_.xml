<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.Home_Fragment">
    <android.support.v7.widget.CardView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4"
        app:cardMaxElevation="@dimen/dp_4"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

            <TextView
                android:id="@+id/txt_course_1"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/training"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_course_2"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_108"
                android:text="@string/beyond_campus"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:id="@+id/fragmentBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>


</RelativeLayout>