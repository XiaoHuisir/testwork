<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites"
    tools:context=".ui.fragment.Mine_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_174"
        android:background="@color/red">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@mipmap/pic_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_21"
                android:text="张宣"
                android:textColor="@color/whites"
                android:textSize="@dimen/sp_18"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title_name"
                android:layout_width="@dimen/dp_148"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_52"
                android:layout_marginTop="@dimen/dp_26"
                android:maxLines="1"
                android:text="处长"
                android:textColor="@color/whites"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="@dimen/dp_192"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_45"
                android:maxLines="1"
                android:text="国家信息中心信息资源开发部开发处"
                android:textColor="@color/whites"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_xiaoxi"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@mipmap/icon_message_white"
                app:layout_constraintLeft_toRightOf="@id/txt_title_name"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@mipmap/icon_set_white"
                app:layout_constraintLeft_toRightOf="@id/img_xiaoxi"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_328"
            android:layout_height="@dimen/dp_128"
            app:cardBackgroundColor="@color/whites"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_training_course"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"

                    android:text="培训课程："
                    android:textColor="@color/blacks"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/rl_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintTop_toBottomOf="@id/txt_training_course">

                    <TextView
                        android:id="@+id/txt_be_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="正在学习"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/txt_be_study"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_80"
                        android:text="16"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_22" />

                    <TextView
                        android:id="@+id/txt_door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_109"
                        android:text="门"
                        android:textColor="@color/grays"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/txt_tl_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_155"
                        android:text="学习时长"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toRightOf="@id/txt_door"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_219"
                        android:text="1241"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_272"
                        android:text="分钟"
                        android:textColor="@color/grays"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/line_grays"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_study">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="课外学习："
                        android:textColor="@color/beige"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_92"
                        android:text="8门"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_126"
                        android:text="/"
                        android:textColor="@color/grays"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_142"
                        android:text="316分钟"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_244"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/whites">

            <TextView
                android:id="@+id/txt_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="学习记录"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_206"
                android:layout_toRightOf="@id/txt_record"
                android:text="查看全部"
                android:textColor="@color/grays"
                android:textSize="@dimen/sp_12" />

            <Button
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/txt_all"
                android:background="@mipmap/item_arrows"
                android:drawableBottom="@null" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/whites" />
    </LinearLayout>
</RelativeLayout>