<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_112"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_icon"
        app:layout_constraintLeft_toRightOf="@id/img_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="@dimen/dp_228"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="16sp"
            android:text="互联网"></TextView>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_14"
            android:text="李红"/>
        <TextView
            android:id="@+id/txt_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_14"
            android:text="职位"
            android:textColor="@color/gray"/>
        <ImageView
            android:id="@+id/img_persent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/schedule_point"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/txt_study_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:layout_toRightOf="@id/img_persent"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="未学习"
            android:textColor="@color/gray"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>